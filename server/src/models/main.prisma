generator client {
  provider = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  username String 
  password String
  phone String
  dateOfBirth DateTime
  created_at DateTime @default(now())
}


model Admin{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  password String
  created_at DateTime @default(now())
}

model ContactUsInfo{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String
  phone String
  subject String
  message String
}